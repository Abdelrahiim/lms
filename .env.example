# =============================================================================
# LMS Application Environment Variables
# =============================================================================
# Copy this file to .env and update the values according to your environment

# =============================================================================
# Server Configuration
# =============================================================================
# Port the server will listen on (default: 8080)
PORT=8080

# Application environment (development, staging, production)
ENVIRONMENT=development

# Server timeouts (duration format: 15s, 1m, etc.)
READ_TIMEOUT=15s
WRITE_TIMEOUT=15s

# =============================================================================
# Database Configuration
# =============================================================================
# Database host (default: localhost)
DB_HOST=localhost

# Database port (default: 5432)
DB_PORT=5432

# Database user (REQUIRED)
DB_USER=your_db_user

# Database password (REQUIRED)
DB_PASSWORD=your_db_password

# Database name (REQUIRED)
DB_NAME=your_db_name

# Database SSL mode (disable, require, verify-ca, verify-full)
DB_SSL_MODE=disable

# =============================================================================
# Authentication Configuration
# =============================================================================
# JWT secret key for signing tokens (REQUIRED)
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here

# JWT token expiry duration (default: 15m)
JWT_EXPIRY=15m

# Refresh token expiry duration (default: 168h = 7 days)
REFRESH_TOKEN_EXPIRY=168h

# Bcrypt cost for password hashing (default: 12)
BCRYPT_COST=12

# =============================================================================
# File Storage Configuration
# =============================================================================
# Path where uploaded files will be stored (default: ./uploads)
UPLOAD_PATH=./uploads

# Maximum file upload size in bytes (default: 10485760 = 10MB)
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# Docker Configuration (for CI/CD)
# =============================================================================
# Docker Hub username for pushing images
DOCKER_USERNAME=your_docker_username

# Docker Hub password or access token
DOCKER_PASSWORD=your_docker_password

# =============================================================================
# Build Configuration (for Docker builds)
# =============================================================================
# Application version (used in Docker labels)
VERSION=dev

# Build timestamp (automatically set during build)
BUILD_TIME=

# Git commit hash (automatically set during build)
GIT_COMMIT=

# =============================================================================
# Go Runtime Configuration (optional)
# =============================================================================
# Maximum number of CPUs to use (0 = all available)
GOMAXPROCS=0

# Memory limit for Go runtime (0 = no limit)
GOMEMLIMIT=0

# =============================================================================
# Gin Framework Configuration (optional)
# =============================================================================
# Gin mode (debug, release, test)
GIN_MODE=release

# =============================================================================
# Timezone Configuration (optional)
# =============================================================================
# Application timezone (default: UTC)
TZ=UTC
